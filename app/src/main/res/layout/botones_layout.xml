            android:backgroundTint="@color/white"
            android:onClick="seleccionarNumero"
            android:text="@string/btn_3"
            android:textColor="@color/color_texto_boton"
            android:textSize="24sp"
            app:strokeColor="@color/borde_boton"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnSumar"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="@string/btn_sumar"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="seleccionarNumero"
            android:text="@string/btn_punto"
            android:textColor="@color/color_texto_boton"
            android:textSize="24sp"
            app:strokeColor="@color/borde_boton"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button23"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/white"
            android:onClick="seleccionarNumero"
            android:text="@string/btn_0"
            android:textColor="@color/color_texto_boton"
            android:textSize="24sp"
            app:strokeColor="@color/borde_boton"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="3dp"
            android:onClick="igual"
            android:text="@string/btn_igual"
            android:textSize="24sp" />

    </GridLayout>
</LinearLayout>